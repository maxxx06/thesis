editor = {Chia, Nicholas},
file = {:Users/mlecomte/Library/Application Support/Mendeley Desktop/Downloaded/Diener, Gibbons, Resendis-Antonio - 2020 - MICOM Metagenome-Scale Modeling To Infer Metabolic Interactions in the Gut Microbiota.pdf:pdf},
