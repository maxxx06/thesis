journal = {Biotechnology for Biofuels},
keywords = {Anaerobic digestion,Hierarchical optimization,Microbial communities,Prediction of community composition,Stoichiometric and constraint-based modeling},
number = {1},
pages = {1--16},
publisher = {BioMed Central},
title = {{Predicting compositions of microbial communities from stoichiometric models with applications for the biogas process}},
