keywords = {Genome-scale Modeling,Metabolic Network,P freudenreichii,Systems Biology,Vitamin B12},
pages = {1--29},
title = {{Genome Scale Constraint-Based Metabolic Reconstruction of Propionibacterium Freudenreichii DSM 20271}},
